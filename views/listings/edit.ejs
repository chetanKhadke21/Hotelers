<% layout("/layouts/boilerplate.ejs") %>
<body>
    <div class="row col-lg-8 col-md-6 col-sm-4 offset-lg-2 offset-md-2 offset-sm-1 mt-4 mb-4">
        <div class="col">
            <form method="post" action="/listings/<%= place._id %>?_method=PUT" class="needs-validation" novalidate enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Name</label>
                    <input type="text" placeholder="Enter Place Name" name="list[title]" id="title" class="form-control" value="<%= place.title%>" required>
                    <div class="invalid-feedback">Enter Valid Name</div>
                </div>
        
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="list[description]" id="description" class="form-control" rows="3" value="<%= place.description %>" placeholder="<%= place.description %>" required></textarea>
                    <div class="invalid-feedback">Enter Description</div>
                </div>
        
                <div class="mb-3">
                    <label for="price" class="form-label">Price</label>
                    <input type="number" placeholder="Enter price" name="list[price]" id="price" class="form-control" value="<%= place.price %>" required> 
                    <div class="invalid-feedback">Enter Valid Price</div>
                </div>
                
                <div class="mb-2"> 
                    <p>Original Image</p>
                    <img src="<%= originalImageUrl %>" alt="Not Found" style="width: 200px;">
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">Upload Image</label>
                    <input type="file" placeholder="Enter URL" name="list[image]" id="image" class="form-control">
                </div>
        
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" placeholder="Enter Location" name="list[location]" id="location" class="form-control" value="<%= place.location %>" required>
                    <div class="invalid-feedback">Enter Location</div>
                </div>
        
                <div class="mb-3">
                    <label for="country" class="form-label">Country</label>
                    <input type="text" placeholder="Enter Country" name="list[country]" id="country" class="form-control" value="<%= place.country %>" required>
                    <div class="invalid-feedback">Enter Country</div>
                </div>
        
                <button type="submit" class="btn btn-dark">Submit</button>
            </form>
        </div>
    </div>
</body>
</html>