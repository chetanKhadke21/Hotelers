<% if(success && success.length)  {%>
    <div class="alert alert-success alert-dismissible fade show" role="alert" style="height: 4rem;">
        <p><%= success %></p>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>


<% if(failure && failure.length)  {%>
    <div class="alert alert-danger alert-dismissible fade show" role="alert" style="height: 4rem;">
        <p><%= failure %></p>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>

<!-- Login Flash Message -->
<% if(error && error.length)  {%>
    <div class="alert alert-danger alert-dismissible fade show" role="alert" style="height: 4rem;">
        <p><%= error %></p>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>
 